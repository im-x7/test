{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "types": ["vite/client", "node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/views/**/*.vue",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "src/views/payment/ServiceAppointmentAdd.vue",
    "src/views/admin/album/AlbumAdd.vue",
    "src/views/admin/supply/BrushingAdd.vue",
    "src/views/admin/supply/BrushingEdit.vue",
    "src/views/admin/supply/BrushingList.vue",
    "src/views/admin/supply/MaterialsAdd.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
